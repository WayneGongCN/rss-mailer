{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
      "src"
  ],
  "exclude": ["node_modules"]
}